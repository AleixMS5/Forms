<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.forms.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="resultat"/>
    <HBox styleClass="alert, alert-info">
        <TextField fx:id="Primer"/>
        <TextField fx:id="Segon"/>
    </HBox>
    <HBox styleClass="alert, alert-success">
        <Button styleClass="btn, btn-success, middle" text="/" onAction="#onClickentre"/>
        <Button styleClass="btn, btn-success, middle" text="*" onAction="#onClickpor"/>
        <Button styleClass="btn, btn-success, middle" text="-" onAction="#onClickmenos"/>
        <Button styleClass="btn, btn-success, middle" text="+" onAction="#onClickmas"/>
    </HBox>

</VBox>
